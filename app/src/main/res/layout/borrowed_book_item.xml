<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgbbavt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_avtatar"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtbbtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Title"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtbbauthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Author"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtbbcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand"
            android:maxLines="2"
            android:text="Category"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/txtbbtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand"
            android:maxLines="2"
            android:text="Category"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtbbborrowdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Borrow Date: "
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtbbreturndate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Return Date: "
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtbblocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Location: "
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp" />
    </LinearLayout>

</LinearLayout>
